{% extends 'templates/base.jinja2' %}

{% block head %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.2/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script src="{{request.static_url('hexserver:static/spell_runner.js')}}"></script>
    <script>
        $(function() {
            runner = new SpellRunner('#spell')
            runner.drawHex()
            runner.runSpell({{spell[4]|default('[]', true)}}, {{spell[5]|default('[]', true)}})
        })
    </script>
{% endblock %}


{% block content %}
    <div style="width: 300px;">
        <h1>{{spell[1]}}</h1>
        <p>by {{spell[0]}}</p>
        <ul>
            <li>{{spell[4]}}</li>
            <li>{{spell[5]}}</li>
            <li>{{spell[6]}}</li>
        </ul>
    </div>
    <div id="spell"></div>
{% endblock %}
